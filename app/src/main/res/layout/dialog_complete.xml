<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/complete_dialog_bg"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="240dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/top"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon"
                android:src="@mipmap/ic_great2"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/msg"
                android:text="恭喜你完成训练"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="bottom|center"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:text="时长"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="数量"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="燃脂"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/time"
                    android:text="@string/complete_time"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/number"
                    android:text="@string/complete_number"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/kcal"
                    android:text="@string/complete_kcal"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/complete_dialog_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>
